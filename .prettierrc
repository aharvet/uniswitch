{
  "printWidth": 80,
  "singleQuote": false,
  "useTabs": false,
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    }
  ]
}
